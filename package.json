{
  "name": "kue-lang",
  "version": "0.1.0",
  "description": "KUE-DSL to KUE-CHIP2 assembly transpiler",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "kue-dsl": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "compiler",
    "transpiler",
    "dsl",
    "kue-chip2",
    "assembly",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "chevrotain": "^11.0.3",
    "commander": "^11.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
